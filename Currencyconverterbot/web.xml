<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Fb Webhook in java</display-name>
	<build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webXml>WebContent\WEB-INF\web.xml</webXml>
                </configuration>
            </plugin>
        </plugins>
    </build>

	<servlet>
		<servlet-name>WebHookServlet</servlet-name>
		<servlet-class>in.strollup.fb.servlet.WebHookServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CurrencyConvert</servlet-name>
		<display-name>CurrencyConvert</display-name>
		<description></description>
		<servlet-class>in.strollup.fb.servlet.CurrencyConvert</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WebHookServlet</servlet-name>
		<url-pattern>/webhook</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CurrencyConvert</servlet-name>
		<url-pattern>/CurrencyConvert</url-pattern>
	</servlet-mapping>
</web-app>
